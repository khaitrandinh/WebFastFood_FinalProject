@model IEnumerable<TCK_FinalProject.Models.Order>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order</h2>
<table class="table">
    <tr>
        <th>#</th>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Order Date</th>
        <th>Delivery Date</th>
        <th>Is Ship</th>
        <th>Is Payment</th>
        <th>Total</th>
        <th></th>
    </tr>
    <tbody>
        @if (Model != null && Model.Any())
        {
            var i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.orderID</td>
                    <td>@item.customerName</td>
                    <td>@item.orderDate</td>
                    <td>@item.deliveryDate</td>
                    <td>@(item.isShip == true? "True" : "False")</td>
                    <td>@(item.isPayment ? "True" : "False")</td>
                    <td>@item.total.ToString()</td>
                    <td>
                        @Html.ActionLink("Detail", "OrderDetail", "Order", new { id = item.orderID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
